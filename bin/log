#!/usr/bin/env python3
# This file is placed in the Public Domain.


import os
import sys
import time


sys.path.insert(0, ".")


from opv.objects import Object
from opv.storage import Storage
from opv.utility import fntime


def __dir__():
    return (
            'Log',
            'log',
           )



Storage.workdir = os.path.expanduser("~/.opv")


class Log(Object):

    def __init__(self):
        super().__init__()
        self.txt = ""


Storage.add(Log)


def elapsed(seconds, short=True):
    txt = ""
    nsec = float(seconds)
    if nsec < 1:
        return f"{nsec:.4f}s"
    year = 365*24*60*60
    week = 7*24*60*60
    nday = 24*60*60
    hour = 60*60
    minute = 60
    years = int(nsec/year)
    nsec -= years*year
    weeks = int(nsec/week)
    nsec -= weeks*week
    nrdays = int(nsec/nday)
    nsec -= nrdays*nday
    hours = int(nsec/hour)
    nsec -= hours*hour
    minutes = int(nsec/minute)
    nsec -= int(minute*minutes)
    sec = int(nsec)
    if years:
        txt += "%sy" % years
    if weeks:
        nrdays += weeks * 7
    if nrdays:
        txt += "%sd" % nrdays
    if years and short and txt:
        return txt.strip()
    if hours:
        txt += "%sh" % hours
    if minutes:
        txt += "%sm" % minutes
    if sec:
        txt += "%ss" % sec
    else:
        txt += "0s"
    txt = txt.strip()
    return txt


def log():
    args = sys.argv[1:]
    if not args:
        nmr = 0
        for fnm, obj in Storage.find("log"):
            print("%s %s %s" % (
                                      nmr,
                                      obj.txt,
                                      elapsed(time.time() - fntime(fnm)))
                                     )
            nmr += 1
        return
    obj = Log()
    obj.txt = " ".join(args)
    Storage.save(obj)
    print("ok")


log()
